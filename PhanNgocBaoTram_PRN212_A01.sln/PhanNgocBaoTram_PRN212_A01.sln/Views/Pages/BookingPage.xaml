<Page x:Class="PhanNgocBaoTramWPF.Views.Pages.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Booking Management">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Center">
			<ComboBox x:Name="cbCustomer" Width="200" DisplayMemberPath="CustomerFullName" />
			<ComboBox x:Name="cbRoom" Width="150" Margin="8,0,0,0" DisplayMemberPath="RoomNumber"/>
			<DatePicker x:Name="dpFrom" Margin="8,0,0,0"/>
			<DatePicker x:Name="dpTo" Margin="8,0,0,0"/>
			<Button Content="Create" Width="90" Margin="8,0,0,0" Click="BtnCreate_Click"/>
		</StackPanel>

		<TextBlock Grid.Row="1" x:Name="txtInfo" Margin="0,0,0,8"/>

        <DataGrid Grid.Row="2" x:Name="dgBookings" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding BookingID}" Width="60"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="150"/>
                <DataGridTextColumn Header="Room" Binding="{Binding RoomNumber}" Width="100"/>
                <DataGridTextColumn Header="From" Binding="{Binding StartDate, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="To" Binding="{Binding EndDate, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
